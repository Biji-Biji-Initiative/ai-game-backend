{
  "apiBaseUrl": "/api/v1",
  "environment": "development",
  "features": {
    "logs": {
      "enabled": true,
      "endpoint": "/system/logs",
      "maxEntries": 500
    },
    "state": {
      "enabled": true,
      "refreshInterval": 30000
    },
    "flows": {
      "enabled": true,
      "maxSteps": 20
    }
  },
  "ui": {
    "theme": "auto",
    "defaultTab": "flows",
    "refreshInterval": 10000
  },
  "debug": true
} 